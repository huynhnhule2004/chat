# Backend Environment Variables
# Copy this file to .env and update the values

# Application
NODE_ENV=development
PORT=5000

# Database - Local Development
MONGODB_URI=mongodb://localhost:27017/chatapp

# Database - Docker Development
# MONGODB_URI=mongodb://admin:password123@mongodb:27017/chatapp_dev?authSource=admin

# Database - Production (Update with your actual credentials)
# MONGODB_URI=mongodb://chate2ee_user:YOUR_PASSWORD@146.190.194.170:27017/chate2ee?authSource=chate2ee

# JWT Configuration  
JWT_SECRET=your-super-secret-jwt-key-change-in-production-must-be-very-long

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=104857600
MAX_AVATAR_SIZE=2097152

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Redis (Optional)
REDIS_URL=redis://localhost:6379

# API Configuration
API_RATE_LIMIT=100
AUTH_RATE_LIMIT=10

# Development Only
DEBUG_MODE=false
LOG_LEVEL=info

# Production Security (Change these in production!)
SESSION_SECRET=another-very-long-secret-key-for-sessions
ENCRYPTION_KEY=32-byte-encryption-key-for-additional-security

# CORS
CLIENT_URL=http://localhost:3000

# Admin User (for initial setup)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change-this-password
